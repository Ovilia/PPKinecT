<Window x:Class="PPKinecT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PPT Assistant" Height="480" Width="640">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Grid>
                <Image Name="videoImage"
                   Width="640"
                   Height="480"></Image>
                <Canvas Background="Transparent">
                    <Ellipse Fill="Red"
                             Height="25" Width="25"
                             Name="RightHand"></Ellipse>
                    <Ellipse Fill="Green"
                             Height="25" Width="25"
                             Name="RightElbow"></Ellipse>
                    <TextBlock Height="90" TextWrapping="Wrap" 
                               Foreground="Black" Background="White"
                               FontSize="30" Name="textBlock" 
                               Text="Please Put Your Right Hand Before the Projection Screen"
                               Width="412" Canvas.Left="122" Canvas.Top="340" />
                    <TextBlock Text="Frame rate: 0"
                               FontSize="15" Name="frameRate"
                               Canvas.Left="10" Canvas.Top="10"></TextBlock>
                </Canvas>
            </Grid>
        </Viewbox>
    </Grid>
</Window>
